<nav class="navbar">
  {{#link-to "dashboard"}}
    <div class="logo">
      bump
    </div>
  {{/link-to}}
  {{#if session.isAuthenticated}}
    <a href="#" class="signin-link" {{action 'logout'}}>
      logout
    </a>
  {{else}}
    <a href={{href-to "sign-up"}} class="signin-link">
      sign up
    </a>
    <a href="#" class="signin-link" {{action (mut authModalOpened) true}}>
      sign in
    </a>
  {{/if}}
</nav>

{{#if authModalOpened}}
  {{to-elsewhere named="modal"
    send=(component "ui/bs-modal" componentName="application/sign-in"
          onClose=(toggle-action "authModalOpened" this))
  }}
{{/if}}

<div class="app-container">
  {{outlet}}
</div>

{{from-elsewhere name="modal"}}
